
<%= form_for(@examination) do |f| %>
<div class="form">
	<h4 class="ui-corner-top">Edit examination</h4>
	<div class="content">
		<% unless (params[:guest_id]) %>
			
			<p><%= link_to 'Select guest', guests_path(:mode => 'select', :from => new_examination_path) %></p>
		<% else %>
		<p>Add examination for <%= @examination.guest.name %></p>
		<%= f.hidden_field :guest_id, :value => @examination.guest_id %>
		<div class="field">
			<%= f.text_field :anamnezis %>
			<%= f.label t('examinations.anamnezis') %>
		</div>
		<div class="field">
			<%= f.text_field :status %>
			<%= f.label t('examinations.status') %>
		</div>
		<div class="field">
			<%= f.text_area :treatment %>
			<%= f.label t('examinations.treatment') %>
		</div>
		<div class="field">
			<%= f.text_field :charge %>
			<%= f.label t('examinations.charge') %>
		</div>
		<div class="actions">
			<%= f.submit :class => 'submit' %>
		</div>
		<% end %>
	</div>
</div>
<% end %>
