<%= form_for @user do |f| %>
<div class="form">
	<h4 class="ui-corner-top"><%= t('.account') %></h4>
	<div class="content">
		<div class="error_messages">
			<%= error_messages_for :user %>	
		</div>
		<div class="field">
			<%= f.text_field :username %>
			<%= f.label :username, t('users.username') %>
		</div>
		<div class="field">
			<%= f.password_field :password %>
			<%= f.label :password, t('users.password') %>
		</div>
		<div class="field">
			<%= f.password_field :password_confirmation %>
			<%= f.label :password_confirmation, t('users.password_confirm') %>
		</div>
		<div class="field">
			<%= f.text_field :email %>
			<%= f.label :email, t('users.email') %>
		</div>
		<div class="field">
			<%= f.select :language, User::LANGUAGES, :prompt => t('users.select_language') %>
			<%= f.label :language, t('users.language') %>
		</div>
		<div class="actions">
			<%= f.submit :class => 'submit' %>
		</div>
	</div>
</div>
<% end %>