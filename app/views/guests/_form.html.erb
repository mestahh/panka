</div>
<div class="field">
	<%= f.check_box :visited_dermatologist, :class => 'checkbox' %>
	<%= f.label t('guests.visited_dermatologist') %>
</div>
<div class="actions">
	<%= f.submit :class => 'submit' %>
</div>
<% end %>