<%= form_for(@guest) do |f| %>

<div class="field">
	<%= f.text_field :name %>
	<%= f.label t('.name') %>
</div>
<div class="field">
	<%= f.text_field :birth %>
	<%= f.label t('.birth'), :class => 'datepicker' %>
</div>
<div class="field">
	<%= f.text_field :mother %>
	<%= f.label t('.mother') %>
</div>
<div class="field">
	<%= f.text_field :address %>
	<%= f.label t('.address') %>
</div>
<div class="field">
	<%= f.text_field :city %>
	<%= f.label t('.city') %>
</div>
<div class="field">
	<%= f.text_field :postal_code %>
	<%= f.label t('.postal_code') %>
</div>
<div class="field">
	<%= f.text_field :phone %>
	<%= f.label t('.phone') %>
</div>
<div class="field">
	<%= f.text_field :email %>
	<%= f.label t('.email') %>
</div>
<div class="actions">
	<%= f.submit :class => 'submit' %>
</div>
<% end %>