<%= form_tag do %>
  <fieldset>
    <h1>Guests</h1>
    <div>
      <label for="search_field" >Search:</label>
      <%= text_field_tag :search_field, params[:search_field] %>
    </div>
    <div>
      <%= submit_tag "Search" %>
    </div>
  </fieldset>
<% end %>

<% @guests.each do |guest| %>
  <p><%= guest.name %> <%= guest.mother %> <%= guest.birth %>
  </p>
<% end %>