<%= form_tag find_guest_path do %>
<fieldset>
	<h1><%= t('.guests') %></h1>
	<div>
		<%= hidden_field_tag :mode, params[:mode], :value => params[:mode] %>
		<%= text_field_tag :search_field, params[:search_field] %>
		<%= submit_tag t('.search_button'), :class => 'submit' %>
	</div>
</fieldset>
<% end %>
<% if flash[:alert] %>
<p id="notice" >
	<%= flash[:alert] %>
</p>
<% end %>
<table id="guests" width="100%">
	<thead>
		<th><%= t('.name') %></th>
		<th><%= t('.mother') %></th>
		<th><%= t('.birth') %></th>
		<th><%= t('.city') %></th>
		<th></th>
		<th></th>
	</thead>

	<% @guests.each do |guest| %>
	<tr>

		<%
		unless (params[:mode]) %>
		<td><%= link_to guest.name, guest_path(:id => guest.id) %></td>
		<%	else %>
		<td><%= link_to guest.name, new_examination_path(:guest_id => guest.id) %></td>
		<% end %>

		<td><%= guest.mother %></td>
		<td><%= guest.birth %></td>
		<td><%= guest.city %></td>
		<td><%= link_to 'Edit', edit_guest_path(:id => guest.id), :class => 'ui-icon ui-icon-pencil' %></td>
		<td><%= link_to 'Delete guest', guest_path(:id => guest.id), :method => 'delete', :confirm => t('.are_you_sure'), :class => 'ui-icon ui-icon-trash' %></td>
	</tr>

	<% end %>
</table>
